---
import Button from "../components/ui/button.astro";
import Projects from "../components/home/projects.astro";
import Separator from "../components/home/separator.astro";
import Experiences from "../components/home/experiences.astro";
import experiences from "../collections/experiences.json";
import Layout from "../layouts/main.astro";
---

<Layout title="Ross Portfolio">
  <div
    class="relative z-20 w-full max-w-4xl mx-auto mt-16 px-7 md:mt-24 lg:mt-32 xl:px-0"
  >
    <div class="flex flex-col items-center md:flex-row">
      <div class="relative w-full md:w-1/2">
        <h1
          class="mb-5 text-4xl font-bold leading-tight md:text-4xl lg:text-6xl dark:text-white"
        >
          Hello, I'm Ross.
        </h1>
        <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
          I'm a full-stack programmer living in Cuba. <br
            class="hidden lg:block"
          />I focus on Web development.
        </p>
        <p class="mb-2 font-semibold text-neutral-800 dark:text-neutral-200">
          I can help you out with:
        </p>
        <ul
          class="py-2 space-y-[6px] text-sm list-disc list-inside text-neutral-500 dark:text-neutral-400"
        >
          <li>Django Development</li>
          <li>React.js Development</li>
          <li>Website Design</li>
          <li>and more...</li>
        </ul>
        <Button text="Follow me on LinkedIn" link="https://www.linkedin.com/in/rosniel-allesta/" />
      </div>
      <div
        class="relative justify-end hidden w-full mt-10 md:flex md:pl-10 md:w-1/2 md:mt-0 md:translate-y-4 xl:translate-y-0"
      >
        <div class="relative z-50 w-full h-full">

          <div class="relative z-30 h-full">
            <img
            src="/assets/images/image-re.png"
            loading="eager"
            decoding="auto"
            class="relative z-40 h-full w-10/12 aspect-[1/1.3] md:max-w-md mx-auto dark:-translate-y-0.5 rounded-lg"
          />
          </div>
        </div>
      </div>
    </div>
  </div>

  <Separator text="Check out my experiences" />
  <Experiences experiences={experiences} />

  <Separator text="Check out my projects" />
  <Projects limit={6 } /> <!-- Aquí pasas el límite -->
</Layout>
