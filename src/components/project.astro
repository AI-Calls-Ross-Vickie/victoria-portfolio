---
import TechnologyBadge from "./projects/TechnologyBradge.astro"

interface Props {
  name: string;
  description: string;
  image: string;
  url: string;
  technologies?: string[];
}

const { name, description, image, url, technologies = [] } = Astro.props;
---

<article class="group relative flex flex-col items-stretch p-4 rounded-2xl overflow-hidden bg-white dark:bg-neutral-950 shadow-lg hover:shadow-xl transition-all duration-300 ease-out transform hover:scale-105">
  <a href={url} target="_blank" rel="noopener noreferrer" class="absolute inset-0 z-10" aria-label={`View ${name} project`}></a>
  <img
    src={image}
    alt={`${name} project thumbnail`}
    class="w-full h-48 object-cover rounded-lg mb-4"
  />
  <h3 class="text-lg font-semibold text-neutral-950 dark:text-neutral-100 mb-2">
    {name}
  </h3>
  <p class="text-sm text-neutral-600 dark:text-neutral-400 mb-4">
    {description}
  </p>
  <div class="mt-auto">
    {technologies.length > 0 && (
      <div class="flex flex-wrap mb-4">
        {technologies.map((tech) => (
          <TechnologyBadge name={tech} />
        ))}
      </div>
    )}
    <div class="flex items-center justify-end">
      <svg
        class="w-6 h-6 text-neutral-900 dark:text-neutral-100 transform group-hover:translate-x-1 transition-transform duration-300"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
    </div>
  </div>
</article>

